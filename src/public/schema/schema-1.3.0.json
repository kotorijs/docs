{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://kotori.js.org/schema/schema-1.3.0.json",
  "title": "Kotori",
  "description": "Config file of kotori",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "lang": {
          "enum": [
            "en_US",
            "ja_JP",
            "zh_TW",
            "zh_CN"
          ]
        },
        "command-prefix": {
          "type": "string"
        },
        "dirs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "adapter": {
      "type": "object",
      "patternProperties": {
        ".": {
          "type": "object",
          "properties": {
            "extends": {
              "type": "string"
            },
            "master": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "number"
                }
              ]
            },
            "lang": {
              "enum": [
                "en_US",
                "ja_JP",
                "zh_TW",
                "zh_CN"
              ]
            },
            "command-prefix": {
              "type": "string"
            }
          },
          "required": [
            "extends",
            "master"
          ]
        }
      }
    },
    "plugin": {
      "type": "object",
      "patternProperties": {
        ".": {
          "type": "object",
          "properties": {
            "filter": {
              "type": "object"
            }
          }
        }
      }
    }
  }
}